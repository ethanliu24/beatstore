<%= turbo_stream.update "navbar_cart_content" do %>
  <%= render partial: "nav/cart" %>
<% end %>

<%= turbo_stream.replace "nav_cart_icon" do %>
  <%= icon "shopping-bag", id: "nav_cart_icon", class: "nav-cart-icon notify-color-change-and-shake" %>
<% end %>

<%= turbo_stream.update "nav_cart_total_price" do %>
  <%= cart_items_total_price(current_or_guest_user.cart) %>
<% end %>

<%= turbo_stream.update "toasts" do %>
  <%= render "shared/toasts" %>
<% end %>
