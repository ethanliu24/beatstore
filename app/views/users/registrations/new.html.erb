<% title(t("label.sign_up")) %>

<div class="auth-form">
  <h2 class="font-bold text-center"><%= t("label.sign_up") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/input", form: f, resource: resource,
      label: t("label.email"), field: :email, field_type: :email,
      options: { autofocus: true, autocomplete: "email" }
    %>

    <%= render "users/shared/input", form: f, resource: resource,
      label: t("label.display_name"), field: :display_name, field_type: :text,
      options: { autofocus: true, autocomplete: "display_name" }
    %>

    <%= render "users/shared/input", form: f, resource: resource,
      label: t("label.password"), field: :password, field_type: :password,
      options: { autocomplete: "new-password" }
    %>

    <%= render "users/shared/input", form: f, resource: resource,
      label: t("label.password_confirmation"), field: :password_confirmation, field_type: :password,
      options: { autocomplete: "new-password" }
    %>

    <%# TODO link to tos page %>
    <p class="text-[0.55rem] mt-12 mb-1 font-light text-center">
      <%= t("authentication.agree_tos") %>
      <a href="" class="external-link" target="_blank" rel="noopener noreferrer"><%= t("label.terms_of_service") %></a>
    </p>

    <div class="actions button py-0.5">
      <%= f.submit t("label.sign_up"), class: "w-full cursor-pointer" %>
    </div>

    <a href=<%= new_confirmation_path(resource_name) %> class="external-link" target="_blank" rel="noopener noreferrer">
      <%= t("authentication.no_confirmation_instructions") %>
    </a>
  <% end %>

  <%= render "users/shared/omniauth_login" %>

  <p class="text-[0.6rem] my-1 font-light text-center">
    <%= t("authentication.already_signed_up") %>
    <a href=<%= new_session_path(resource_name) %> class="external-link"><%= t("label.sign_in") %></a>
  </p>
</div>

