<% title(t("label.resend_instructions")) %>

<div class="auth-form">
  <h2 class="font-bold text-center"><%= t("label.resend_instructions") %></h2>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |form| %>
    <%= render Ui::AuthInputComponent.new(
      form:, resource:, field: :email, label: t("label.email"), type: :email,
      options: { autofocus: true, autocomplete: "email" },
    ) %>

    <div class="actions button py-0.5 mt-8">
      <%= form.submit t("label.resend"), class: "w-full cursor-pointer" %>
    </div>

    <div class="flex flex-col justify-start items-stretch w-full mt-2">
      <a href=<%= new_password_path(resource_name) %> class="external-link">
        <%= t("authentication.forgot_password") %>
      </a>

      <a href=<%= new_session_path(resource_name) %> class="external-link">
        <%= t("authentication.back_to_sign_in") %>
      </a>

      <a href=<%= new_registration_path(resource_name) %> class="external-link">
        <%= t("authentication.back_to_sign_up") %>
      </a>
    </div>
  <% end %>
</div>