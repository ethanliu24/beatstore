<% avatar_size = "w-#{size} h-#{size} aspect-square" %>

<% if current_user && current_user.profile_picture.attached? %>
  <%= image_tag current_user.profile_picture, class: "avatar #{avatar_size}" %>
<% else %>
  <div class="relative <%= avatar_size %> overflow-hidden bg-secondary-bg rounded-full">
    <svg class="absolute w-full h-full text-gray-400 translate-y-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
    </svg>
  </div>
<% end %>
