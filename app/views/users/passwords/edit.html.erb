<div class="auth-form">
  <h2 class="font-bold text-center"><%= t("label.change_password") %></h2>


  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <%= render "users/shared/input", form: f, resource: resource,
      label: t("label.new_password"), field: :password, field_type: :password,
      options: { autocomplete: "new-password" }
    %>

    <%= render "users/shared/input", form: f, resource: resource,
      label: t("label.password_confirmation"), field: :password_confirmation, field_type: :password,
      options: { autocomplete: "new-password" }
    %>

    <div class="actions button py-0.5 mt-8">
      <%= f.submit t("label.reset"), class: "w-full cursor-pointer" %>
    </div>

    <div class="flex flex-col justify-start items-stretch w-full mt-2">
      <a href=<%= new_confirmation_path(resource_name) %> class="external-link">
        <%= t("authentication.no_confirmation_instructions") %>
      </a>

      <a href=<%= new_session_path(resource_name) %> class="external-link">
        <%= t("authentication.back_to_sign_in") %>
      </a>

      <a href=<%= new_registration_path(resource_name) %> class="external-link">
        <%= t("authentication.back_to_sign_up") %>
      </a>
    </div>
  <% end %>
</div>