<% title(t("label.sign_in")) %>

<div class="auth-form">
  <h2 class="font-bold text-center">Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <%= render Ui::AuthInputComponent.new(
      form:, resource:, field: :email, label: t("label.email"), type: :email,
      options: { autofocus: true, autocomplete: "email" },
    ) %>

    <%= render Ui::AuthInputComponent.new(
      form:, resource:, field: :password, label: t("label.password"), type: :password,
      options: { autocomplete: "current-password" }
    ) %>

    <div class="flex justify-between items-center mt-6 mb-1">
      <% if devise_mapping.rememberable? %>
        <div class="field text-[0.8rem] font-light">
          <%= form.check_box :remember_me, class: "accent-accent" %>
          <%= form.label :remember_me %>
        </div>
      <% end %>
      <a href=<%= new_password_path(resource_name) %> class="external-link"><%= t("authentication.forgot_password") %></a>
    </div>

    <div class="actions button py-0.5">
      <%= form.submit t("label.sign_in"), class: "w-full cursor-pointer" %>
    </div>

    <a href=<%= new_confirmation_path(resource_name) %> class="external-link" target="_blank" rel="noopener noreferrer">
      <%= t("authentication.no_confirmation_instructions") %>
    </a>
  <% end %>

  <%= render "users/shared/omniauth_login" %>

  <p class="text-[0.6rem] my-1 font-light text-center">
    <%= t("authentication.already_signed_in") %>
    <a href=<%= new_user_registration_path %> class="external-link"><%= t("label.sign_up") %></a>
  </p>
</div>