<% title(t("label.liked_tracks")) %>

<div class="w-full">
  <%= render "shared/page_title", title: t("label.liked_tracks"), subtitle: t("profile.see_tracks_you_liked_here") %>

  <div>
    <% if @liked_tracks.any? %>
      <% @liked_tracks.each_with_index do |track, i| %>
        <%= render "tracks/track", track: track, index: i + 1 %>
      <% end %>
    <% else %>
      <p class="text-center font-light text-secondary-txt font-xs mt-8">
        <%= t("profile.you_havent_liked_any_tracks_yet") %>
      </p>
    <% end %>
  </div>
</div>