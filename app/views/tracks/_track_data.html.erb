<div id="<%= dom_id(@track, :show_data) %>"
  class="grid grid-flow-col auto-cols-max max-md gap-3 text-[0.6rem] text-secondary-txt w-full mt-1
    max-md:grid-flow-row max-md:grid-cols-3 max-md:auto-cols-auto max-md:gap-y-1 max-sm:max-w-xs max-sm:mx-auto max-sm:justify-center">
  <% [
    { icon: "calendar", value: format_date(track.created_at) },
    { icon: "activity-heartbeat", value: track.bpm ? "#{track.bpm} BPM" : "_" },
    { icon: "piano", value: track.key.presence || "_" },
    { icon: "music", value: track.genre },
    { icon: "player-play", value: track.num_plays },
    { icon: "heart", value: track.num_hearts },
  ].each do |data| %>
    <div class="flex justify-start items-center gap-1">
      <%= icon data[:icon], class: "#{icon_dimension}" %>
      <p class="whitespace-nowrap truncate"><%= data[:value] %></p>
    </div>
  <% end %>
</div>
