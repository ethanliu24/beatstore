<%= content_tag :div, class: "nested-fields flex justify-between items-center w-full gap-4" do %>
  <div class="field content-input-container max-w-110">
    <%= f.label :name %>
    <%= f.text_field :name, class: "content-input" %>
  </div>
  <div class="field content-input-container max-w-60">
    <%= f.label :artist %>
    <%= f.text_field :artist, class: "content-input" %>
  </div>
  <div class="field content-input-container flex-1">
    <%= f.label :link %>
    <%= f.text_field :link, class: "content-input" %>
  </div>
  <div class="text-error p-2 ml-2 bg-error/20 h-full rounded">
    <%= link_to_remove_association f do %>
      <%= icon "trash", class: "w-5 h-5 aspect square" %>
    <% end %>
  </div>
<% end %>
