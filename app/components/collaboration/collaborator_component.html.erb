<div class="flex flex-col gap-2">
  <div class="flex justify-between items-center w-full gap-8">
    <div class="field content-input-container">
      <%= form.label :name %>
      <%= form.text_field :name, class: "content-input" %>
    </div>
    <div class="field content-input-container">
      <%= form.label :role %>
      <%= form.select :role, options_for_select(collaborator_role_options, collaborator.role), {}, class: "content-input" %>
    </div>
    <div class="field content-input-container">
      <%= form.label "Profit Share %" %>
      <%= form.number_field :profit_share, step: 0.01, min: 1, max: 100,class: "content-input" %>
    </div>
    <div class="field content-input-container">
      <%= form.label "Publishing Share %" %>
      <%= form.number_field :profit_share, step: 0.01, min: 1, max: 100,class: "content-input" %>
    </div>
  </div>
  <div>
    <div class="field content-input-container">
      <%= form.label :notes %>
      <%= form.text_area :notes, class: "content-input resize-none" %>
    </div>
  </div>
</div>