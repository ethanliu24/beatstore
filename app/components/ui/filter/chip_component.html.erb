<%= content_tag :div, data:, class: "hidden w-fit h-fit bg-secondary-bg rounded-full px-2 py-0.5" do %>
  <div class="flex justify-center items-center flex-nowrap gap-1">
    <span id="<% chip_id %>" class="text-secondary-txt text-[0.6rem]">
      <%= "#{title}:" %>
    </span>
    <p class="track-filter-chip-text text-nowrap text-[0.6rem]"></p>
    <div class="w-fit h-fit cursor-pointer" data-action="<%= close_action %>">
      <%= icon "x", class: "w-3 h-3 aspect-square" %>
    </div>
  </div>
<% end %>
